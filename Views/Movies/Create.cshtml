@model NewMovieVM

@{
    ViewData["Title"] = "Create a new movie";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Create a new movie</h4>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">

                <form asp-action="Create">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label" asp-for="Name"></label>
                                <input class="form-control" asp-for="Name" />
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="form-group">
                                    <label class="control-label" asp-for="StartDate"></label>
                                    <input class="form-control" asp-for="StartDate" />
                                    <span class="text-danger" asp-validation-for="StartDate"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="form-group">
                                    <label class="control-label" asp-for="EndDate"></label>
                                    <input class="form-control" asp-for="EndDate" />
                                    <span class="text-danger" asp-validation-for="EndDate"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="form-group">
                                    <label class="control-label" asp-for="Price"></label>
                                    <input class="form-control" asp-for="Price" />
                                    <span class="text-danger" asp-validation-for="Price"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="form-group">
                                    <label class="control-label" asp-for="ImageURL"></label>
                                    <input class="form-control" asp-for="ImageURL" />
                                    <span class="text-danger" asp-validation-for="ImageURL"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
